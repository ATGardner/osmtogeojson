#!/usr/bin/env node

var osmtogeojson = require('./'),
    argv = require('optimist')
        .usage('Usage: $0 FILE')
        .demand(1)
        .argv;
    fs = require('fs'),
    xmldom = new (require('xmldom').DOMParser)();

var filename = argv._[0];

console.log(
    JSON.stringify(
        osmtogeojson.toGeojson(
            xmldom.parseFromString(
                fs.readFileSync(filename, 'utf8')
            )
        ), null, 4
    )
);